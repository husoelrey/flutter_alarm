<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    tools:context=".AlarmRingActivity">

    <TextView
        android:id="@+id/textViewAlarmTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UYANMA ZAMANI!"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/iconAlarm"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="32dp"/>

    <ImageView
        android:id="@+id/iconAlarm"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_alarm_white"
        app:tint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/textViewAlarmTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonDismiss"
        android:layout_marginBottom="64dp"/>

    <Button
        android:id="@+id/buttonDismiss"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="KAPAT"
        android:textSize="20sp"
        android:textColor="@color/purple_700"
        android:backgroundTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>